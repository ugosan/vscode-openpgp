{
  "name": "vscode-openpgp",
  "displayName": "vscode-openpgp",
  "description": "OpenPGP Encryption support for VSCode",
  "version": "0.0.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/ugosan/vscode-openpgp"
  },
  "icon": "images/icon.png",
  "publisher": "ugosan",
  "author": {
    "name": "Ugo Sangiorgi"
  },
  "homepage": "https://github.com/ugosan/vscode-openpgp",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "openpgp",
    "gpg",
    "gnupg",
    "pgp",
    "encrypt",
    "decrypt",
    "secure"
  ],
  "activationEvents": [
    "onCommand:vscode-openpgp.generatePrivateKey",
    "onCommand:vscode-openpgp.encrypt",
    "onCommand:vscode-openpgp.decrypt",
    "onView:private-keys"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-openpgp.generatePrivateKey",
        "title": "New Private Key...",
        "category": "OpenPGP"
      },
      {
        "command": "vscode-openpgp.encrypt",
        "title": "Encrypt File ...",
        "category": "OpenPGP"
      },
      {
        "command": "vscode-openpgp.decrypt",
        "title": "Decrypt File ...",
        "category": "OpenPGP"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-openpgp.encrypt",
          "group": "1_modification"
        },
        {
          "command": "vscode-openpgp.decrypt",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "OpenPGP",
      "properties": {
        "openpgp-encrypt.encrypt.keysFolder": {
          "type": "string",
          "description": "Specifies the folder path where the private and public keys will be stored.",
          "default": "${homeDir}/.vscode/openpgp-keys"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
          {
              "id": "openpgp",
              "title": "OpenPGP",
              "icon": "images/activity-bar-icon.svg"
          }
      ]
  },
  "views": {
      "openpgp": [
          {
              "id": "private-keys",
              "name": "Private Keys"
          },
          {
              "id": "public-keys",
              "name": "Public Keys"
          }
      ]
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.5",
    "@types/openpgp": "^4.4.11",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "clean-webpack-plugin": "^3.0.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "stream": "0.0.2",
    "ts-loader": "^7.0.5",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "openpgp": "4.10.9"
  }
}
