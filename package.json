{
  "name": "vscode-openpgp",
  "displayName": "vscode-openpgp",
  "description": "OpenPGP Encryption support for VSCode",
  "version": "0.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/ugosan/vscode-openpgp"
  },
  "icon": "images/icon.png",
  "publisher": "ugosan",
  "author": {
    "name": "Ugo Sangiorgi"
  },
  "homepage": "https://github.com/ugosan/vscode-openpgp",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "openpgp",
    "gpg",
    "gnupg",
    "pgp",
    "encrypt",
    "decrypt",
    "secure"
  ],
  "activationEvents": [
    "onCommand:vscode-openpgp.generatePrivateKey",
    "onCommand:vscode-openpgp.encrypt",
    "onCommand:vscode-openpgp.decrypt"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-openpgp.generatePrivateKey",
        "title": "New Private Key...",
        "category": "OpenPGP"
      },
      {
        "command": "vscode-openpgp.encrypt",
        "title": "Encrypt File ...",
        "category": "OpenPGP"
      },
      {
        "command": "vscode-openpgp.decrypt",
        "title": "Decrypt File ...",
        "category": "OpenPGP"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-openpgp.encrypt",
          "group": "1_modification"
        },
        {
          "command": "vscode-openpgp.decrypt",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "OpenPGP",
      "properties": {
        "openpgp-encrypt.encrypt.keysFolder": {
          "type": "string",
          "description": "Specifies the folder path where the private and public keys will be stored.",
          "default": "${homeDir}/.vscode/openpgp-keys"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "compile": "npm run webpack",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.5",
    "@types/openpgp": "^4.4.11",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "clean-webpack-plugin": "^3.0.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "stream": "0.0.2",
    "ts-loader": "^7.0.5",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "openpgp": "4.10.4"
  }
}
